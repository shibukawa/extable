{
  "name": "extable",
  "private": true,
  "version": "0.3.1",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:wrappers && npm run build:demos && npm run build:server",
    "build:core": "npm run build --workspace @extable/core",
    "build:wrappers": "npm run build --workspace @extable/react && npm run build --workspace @extable/vue",
    "build:demos": "npm run build --workspace @extable/demo && npm run build --workspace @extable/demo-react && npm run build --workspace @extable/demo-vue",
    "build:server": "npm run build --workspace @extable/server-hono",
    "build:sequence": "npm run build --workspace @extable/sequence",
    "prebuild:docs": "npm run build:core",
    "build:docs": "npm run build --workspace @extable/docs",
    "test": "npm run test --ws --if-present",
    "lint": "biome lint . && npm run lint --ws --if-present",
    "format": "biome format --write . && npm run format --ws --if-present",
    "dev": "npm run dev --ws --if-present",
    "dev:demo": "npm run dev --workspace @extable/demo",
    "dev:demo-react": "npm run dev --workspace @extable/demo-react",
    "dev:demo-vue": "npm run dev --workspace @extable/demo-vue",
    "dev:server": "npm run dev --workspace @extable/server-hono",
    "dev:docs": "npm run dev --workspace @extable/docs",
    "dev:sequence": "npm run dev --workspace @extable/sequence",
    "e2e": "npm run e2e --ws --if-present",
    "preview:docs": "npm run preview --workspace @extable/docs",
    "postinstall": "PLAYWRIGHT_BROWSERS_PATH=0 playwright install chromium firefox webkit"
  },
  "overrides": {
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@playwright/test": "^1.46.0",
    "@types/node": "^25.0.3",
    "tsx": "^4.19.1",
    "jsdom": "^27.3.0",
    "playwright": "^1.46.0",
    "typescript": "^5.6.3",
    "vite": "^7.2.4",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.16"
  },
  "browserslist": [
    "last 2 versions",
    "not dead"
  ]
}
